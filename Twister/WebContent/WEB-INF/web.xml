<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"> 
<web-app> 
	<servlet> 
		<servlet-name>Login</servlet-name> 
		<servlet-class>com.twister.servlets.Login</servlet-class> 
	</servlet> 
	<servlet> 
		<servlet-name>Logout</servlet-name> 
		<servlet-class>com.twister.servlets.Logout</servlet-class> 
	</servlet>
	<servlet>
		<servlet-name>Search</servlet-name>
		<servlet-class>com.twister.servlets.Search</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RemoveFriend</servlet-name>
		<servlet-class>com.twister.servlets.RemoveFriend</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateUser</servlet-name>
		<servlet-class>com.twister.servlets.CreateUser</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddComment</servlet-name>
		<servlet-class>com.twister.servlets.AddComment</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddFriend</servlet-name>
		<servlet-class>com.twister.servlets.AddFriend</servlet-class>
	</servlet>
	<servlet-mapping> 
		<servlet-name>Login</servlet-name> 
		<url-pattern>/login</url-pattern> 
	</servlet-mapping> 
	<servlet-mapping> 
		<servlet-name>Logout</servlet-name> 
		<url-pattern>/logout</url-pattern> 
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RemoveFriend</servlet-name>
		<url-pattern>/removeFriend</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateUser</servlet-name>
		<url-pattern>/createUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddComment</servlet-name>
		<url-pattern>/addComment</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddFriend</servlet-name>
		<url-pattern>/addFriend</url-pattern>
	</servlet-mapping>
</web-app>
